        script.
            $(function() {




                function calculate() {
                    var price = $("#range-price").slider("value");
                    var advertising = $("#range-advertising").slider("value");
                    var other = $("#range-other").slider("value");

                    console.log('price', price);
                    console.log('advertising', advertising);
                    console.log('other', other);

                    // [1] * округлить(3 + [2]/12) - [3]
                    var receipts = price * Math.round(3 + advertising / 12) - other;
                    console.log('receipts', receipts);
                    // [ВЫРУЧКА]*0,67 - [2] - [3] - [ВЫРУЧКА]*0,06
                    var profit = receipts * 0.67 - advertising - other - receipts * 0.06;

                    $('#calc-receipts').text(receipts);
                    $('#calc-profit').text(profit);
                }

                $("#range-price").slider({
                  range: "min",
                  value: 80000,
                  min: 60000,
                  max: 120000,
                  slide: function( event, ui ) {
                    $("#range-price-amount").text(ui.value+" руб");
                    price = ui.value;
                    calculate();
                  }
                });
                $("#range-price-amount").text($("#range-price").slider("value")+" руб");

                $("#range-advertising").slider({
                  range: "min",
                  value: 40000,
                  min: 0,
                  max: 500000,
                  slide: function( event, ui ) {
                    $("#range-advertising-amount").text(ui.value+" руб");
                    advertising = ui.value;
                    calculate();
                  }
                });
                $("#range-advertising-amount").text($("#range-advertising").slider("value")+" руб");

                $("#range-other").slider({
                  range: "min",
                  value: 10000,
                  min: 0,
                  max: 50000,
                  slide: function( event, ui ) {
                    $("#range-other-amount").text(ui.value+" руб");
                    other = ui.value;
                    calculate();
                  }
                });
                $("#range-other-amount").text($("#range-other").slider("value")+" руб");

                calculate();
            });
